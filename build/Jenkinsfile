node ('124') {

    stage('Check Out') {
        dir ('ovs') {
            git 'https://github.com/openvswitch/ovs.git'
        }
        sh '''
        cd ovs/
        git checkout v2.8.0
        '''
    }

    stage('Configure') {
	    sh '''
	        cd ovs/
	        ./boot.sh
            ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc
	    '''
    }

    stage('Build') {
    sh '''
        cd ovs/
        make
        echo $?
    '''
    }

    stage('Initial Tests') {
    sh '''
	cd ovs/
    	make check
    '''
    }

    stage('Testing Userspace Datapath') {
    sh '''
	cd ovs/
    	make check-system-userspace
	echo 'output stored in tests/system-userspace-traffic.dir'
    '''
    }

    stage('Installed Kernel Module Test') {
    sh '''
	cd ovs/
    	make check-kernel
    '''
    }

    stage('Building Module') {
    sh '''
	cd ovs/
    	make modules_install
	config_file="/etc/depmod.d/openvswitch.conf"
	for module in datapath/linux/*.ko; do
 		modname="$(basename ${module})"
 		echo "override ${modname%.ko} * extra" >> "$config_file"
  		echo "override ${modname%.ko} * weak-updates" >> "$config_file"
  	done
	depmod -a
	modprobe openvswitch
    '''
    }
    stage('Testing Kernel Module from Build') {
    sh '''
	cd ovs/
    	make check-kernel
    '''
    }
}
